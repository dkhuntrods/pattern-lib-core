<button
    type="button"
    class="ff_module-profile-response-button{this.props.uiState ? ' ff_module-profile-response-button--'+this.props.uiState : ''}"
    data-guid="{this.props.guid}"
    onClick="{this.props.onSelect}"
    >
      <figure class="ff_module-profile-response-button__picture">
        <img class="ff_module-profile-response-button__image" src="{this.props.pic_href}">
      </figure>
      <div class="ff_module-profile-response-button__caption">
        <span class="ff_module-profile-response-button__title">{this.props.label}</span>
        <span class="ff_module-profile-response-button__status">{this.props.status}</span>
        <span class="ff_module-profile-response-button__mark">{this.props.mark}</span>
      </div>

</button>
