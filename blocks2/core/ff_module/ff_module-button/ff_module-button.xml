<button
    {% if data.id %}         id="{{data.id}}"                 {% endif %}
    {% if data.modifier %}   modifier="{{data.modifier}}"     {% endif %}
    {% if data.icon %}       icon="{{data.icon}}"             {% endif %}
    {% if data.icon_align %} icon_align="{{data.icon_align}}"  {% endif %}
    {% if data.disabled %}   disabled="{{data.disabled}}"     {% endif %}
    {% if data.hide_text %}  hide_text="{{data.hide_text}}"   {% endif %}
    >
        <text>{{data.text | default('Click me?')}}</text>
        {% for d in data %}
        <data attr="{{d.attr}}">{{d.value}}</data>
        {% endfor %}
</button>
