<item title="{{title | default('Container Title')}}" more-page-text="{{pagetext}}" more-page-link="{{ pagelink | default('#') }}" show-footer="{{ showfooter | default('yes') }}" modifiers="{{ modifiers }}">
	{% if modules %}
	{% for module in modules %}
		<module>{{module}}</module>
	{% endfor %}
	{% endif %}
</item>
