<inputs modifier="{{modifier}}">
{% for item in inputs %}

<form-pair id="{{item.id}}" modifier="{{item.modifier}}">
    <input type="{{item.type | default('radio')}}" modifier="{{item.modifier}}" value="{{item.value}}" id="{{item.id}}" name="{{item.name}}" checked="{{item.checked}}" disabled="{{item.disabled}}" />
    <label modifier="{{item.modifier}}" for="{{item.id}}">{{item.label}}</label>
</form-pair>

{% endfor %}
</inputs>
