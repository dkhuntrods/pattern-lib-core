<rt-require dependency="./_TaskEventContainer.js" as="TaskEventContainer"/>

<TaskEventContainer event="{this.props.event}">
    <span class="ff_module-task-event__author-action">{this.props.event.author.name} added a comment:</span>
    <blockquote class="ff_module-task-event__comment">{this.props.event.comment}</blockquote>
</TaskEventContainer>
